{
    "name": "olegstan/safe-bc-math",
    "description": "Safe versions of BC math functions",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.0.30",
        "ext-bcmath": "*"
    },
    "autoload": {
        "psr-4": {
            "BackEndTea\\BcMath\\": "src/"
        },
        "files": ["src/bcmath.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "BackEndTea\\BcMath\\": "test/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "^0.12.17",
        "vimeo/psalm": "^3.9"
    }
}
